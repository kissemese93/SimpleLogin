<Window x:Class="SimpleLogin.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLogin"
        mc:Ignorable="d"
        Title="UserLogin" Height="450" Width="800">
    <Grid Background="#FFD09E14">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="250">
            <TextBlock Text="Username:" Margin="20,40,20,20"/>
            <TextBox x:Name="userNameBox" Margin="20,20,20,20"/>
            <TextBlock Text="Password:" Margin="20,40,20,20"/>
            <PasswordBox x:Name="passwordBox" Margin="20,20,20,20"/>
            <Button x:Name="LoginBtn" Click="Login_Click" Content="Login" Width="80" Height="30" Margin="20,30,20,20"/>
            
        </StackPanel>
    </Grid>
</Window>
